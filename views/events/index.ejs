<%- include('../partials/head') %>
<div class="my-16">
<h1 class="text-center text-3xl font-bold">Upcoming Events</h1>
</div>
<div class="flex justify-center bg-slate-50 pt-8">
  <div class="flex flex-col md:max-w-md">
    <img class="my-8 grayscale hover:grayscale-0" src="/images/chris-montgomery-smgTvepind4-unsplash.jpg" alt="class" />
    <% events.forEach(function(event) { %>
      <div class="bg-blue-50 p-4 my-8 md:rounded-lg">
              <div class="flex flex-col space-y-4 mb-8">
                <h2 class="text-2xl"><%= event.name %></h2>
                <h3 class="text-xl"><%= moment(event.date).format('LL h:mm a') %> ET</h3>
                <p class="text-sm">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptatibus quia, nulla! Maiores et perferendis eaque, exercitationem praesentium nihil.</p>
                <a class="text-black text-center font-bold bg-blue-200 px-4 py-2 rounded hover:bg-blue-300" href="/events/<%= event.id %>">Sign up to Attend!</a>
              </div>
          </div>              
      <% }) %>
  </div>
</div>
<%- include('../partials/footer') %>