<%- include('../partials/head') %>
<title><%= course.name %> | NextGen Coders Academy</title>
<meta name="description" content="Enroll in <%= course.name %> at Next Gen Coders Academy. Master web development and advance your programming career.">
<%- include('../partials/head_end') %>
<div class="flex justify-center bg-blue-100">
    <div class="md:mx-3 pt-3 md:max-w-md p-4 md:rounded-lg">
        <h1 class="text-center my-8 text-3xl font-bold"><%= course.name %></h1>
        <div class="max-w-screen-md py-8 pl-8 md:rounded-lg flex flex-col">
            <h2 class="text-xl underline">Course Information</h2>
            <div class="mt-4">
                <i class="fa-solid fa-hourglass-start"></i>
                <strong class="text-xs">Start</strong>
            </div>
            <p class="mb-4"><%= moment(course.startDate).format('LL') %></p>
            <div class="mt-4">
                <i class="fa-solid fa-hourglass-start"></i>
                <strong class="text-xs">End</strong>
            </div>
            <p class="mb-4"><%= moment(course.endDate).format('LL') %></p>
            <div class="mt-4">
                <i class="fa-solid fa-circle-info"></i>
                <strong class="text-xs">Description</strong>
            </div>
            <p class="mb-4"><%= course.description %></p>
            <div class="mt-4">
                <i class="fa-regular fa-clock"></i>
                <strong class="text-xs">Total Hours</strong>
            </div>
            <p class="mb-4"><%= course.hours %>+</p>
            <p><%= course.courseType %></p>
        </div>
    </div>
</div>

<div class="flex justify-center">
    <div class="my-16 md:mx-3 pt-3 md:max-w-md p-4 rounded-lg ">
      <h2 class="text-2xl my-4 font-bold">Get more info on this cohort</h2>
      <form class="flex flex-col" action="/students" method="POST">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="firstName">First Name</label>
          <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" required id="firstName" name="firstName" placeholder="Enter First Name">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="lastName">Last Name</label>
          <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" required id="lastName" name="lastName" placeholder="Enter Last Name">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="email">Email</label>
          <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" required id="email" name="email" placeholder="Enter Email Address">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="location">Location</label>
          <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" required id="location" name="location" placeholder="Enter Location">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="bio">Bio</label>
          <textarea class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" id="bio" name="bio" placeholder="Tell us a little bit about yourself." rows="10"></textarea>
          <div class="flex flex-col md:flex-row-reverse">
            <button class="md:ml-2 basis-1/2 font-xs rounded py-2 text-white bg-blue-400 hover:bg-blue-500" type="submit" value="Sign Up">Sign Up →</button>
            <a href="/courses" class=" text-center mt-4 md:mt-0 md:mr-2 basis-1/2 font-xs rounded py-2 text-black border border-blue-400 hover:bg-blue-500 hover:text-white" value="All Courses">← All Courses</a>
        </div>
      </form>
    </div>
  </div>

<%- include('../partials/footer') %>