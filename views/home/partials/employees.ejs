<div class="">
<h1 class="text-2xl pt-20 text-center mb-8">Meet the Instructors</h1>
<div class="flex flex-col lg:flex-row justify-center align center">
    <% employees.forEach(function(employee) { %>
        <div class="bg-blue-100 p-2 md:rounded-lg md:mx-4 md:max-w-md flex flex-col items-center mb-8">
            <img  class="h-48 md:h-52 lg:h56 w-auto transition-all duration-300 rounded-full filter grayscale hover:grayscale-0 mt-4" src="<%= employee.image %>" />
            <h2 class="text-2xl text-center my-4"><%= employee.firstName %> <%= employee.lastName %></h2>
            <p class="text-xs md:text-sm px-4 pb-4"><%= employee.bio %></p>
        </div>
    <% }) %>
</div>
</div>