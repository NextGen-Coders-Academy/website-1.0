<h1 class="font-outfit md:font-audiowide text-2xl pt-20 text-center pb-10">Meet the Instructors</h1>
<div class="flex lg:flex-row md:flex:col sm:flex-col justify-center align center">
    <% employees.forEach(function(employee) { %>
        <div class="bg-red-800 flex-row p-2 rounded-lg mx-4">
            <img  class="h-72 w-auto transition-all duration-300 rounded-full cursor-pointer filter grayscale hover:grayscale-0" src="<%= employee.image %>" />
            <h2 class="text-2xl text-center"><%= employee.firstName %> <%= employee.lastName %></h2>
            <p><%# employee.bio %></p>
        </div>
    <% }) %>
</div>